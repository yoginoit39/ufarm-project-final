h1 Client Orders
form(action="/view_order", method="post") 
.container.d-flex.justify-content-start
  .row
    each order in view_order  
      .col 
        .card.text-center(style='width: 20rem;')
          .card-body
            h5.card-title Name: #{order.final_orderby}
            p.card-text Email: #{order.owner_email}
            p.card-text Order Product: #{order.product_name}
            p.card-text Unit Price:  #{order.unit_price}
            p.card-text Contact: #{order.owner_contact}
            p.card-text product owner: #{order.owner_name}
            //- p.card-text Order Status: #{order.order_status}
