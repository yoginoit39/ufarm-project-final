    .market-search.container.mb-5
        form.mx-5(action='')
            .row 
                .col-2 
                .col-8
                    input.col-6.form-control(type='search' placeholder='search product')
                .col-2
    .container.mt-5
        .row.row-cols-1.row-cols-md-3.row-cols-lg-4.g-4
                        .col
                            .card.h-100
                                img.card-img-top.card-img-top.px-2.py-2(src='#' alt='...')
                                .card-body.text-center.my-4
                                    h4.card-title 
                                    h6.quantity.my-3(style='font-weight: lighter;') medium
                                    h6.price.my-3(style='font-weight: lighter;') Ugx. 
                                    button.add2cart-btn.btn(type='button' data-bs-toggle='modal' data-bs-target=`#contact-sellerModal-`)
                                        | Book Order
                                    .modal.fade(tabindex='-1' id=`contact-sellerModal-` aria-labelledby=`contact-sellerModal-Label` aria-hidden='true')
                                        .modal-dialog.modal-lg
                                            .modal-content
                                                .modal-header
                                                    h5#exampleModalLabel.modal-title / Specify your Quantity
                                                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                                .modal-body
                                                    form(action="/create_booking" method='post')
                                                        label(for='quantity') Quantity 
                                                        input(type='number' name='order_quantity')
                                                        br
                                                        label(for='public_user_contact') Contact
                                                        input(type='text' name='public_user_contact')
                                                        input(type='hidden' name='produce_id' )
                                                        input(type='hidden' name='produce_owner_name' )
                                                        input(type='hidden' name='produce_owner_contact' )
                                                        button.add2cart-btn.btn(type='submit') Confirm
                                                .modal-footer
                                                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                                                    button.btn.btn-primary(type='button') Save changes
