h1.header Login to Ufarm

form(action='/login' method='post')
  .container.d-flex.justify-content-center
    .row 
      .col
        .mb-3
          label.form-label(for='exampleInputEmail1') Username
          input#exampleInputEmail1.form-control(type='text' name='fo_id' aria-describedby='emailHelp')
        .mb-3
          label.form-label(for='exampleInputPassword1') Password
          input#exampleInputPassword1.form-control(type='password' name='password')
