  link(rel='stylesheet' href='/css/style.css')
// main
.main
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNavAltMarkup.collapse.navbar-collapse
      .navbar-nav
        a.nav-item.nav-link.active(href='#')
          | Welcome #####
          span.sr-only (current)
        a.nav-item.nav-link(href='#')
        a.nav-item.nav-link(href='#') Sign Out

  .container.main-container-uf
    .row
      .col-lg-12
        form#add-form.cont-form(action='/add_prod' method='post' enctype="multipart/form-data")
          .row.form-row
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='date' placeholder='Date' name='date')
              label#float-lables Date
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='text' placeholder='Produce Name' name='prod_name')
              label#float-lables Produce Name
          .row.form-row
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='text' placeholder='Ward Name' name='ward_name')
              label#float-lables Ward Name
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='number' placeholder='Unit Price' name='unit_price')
              label#float-lables Unit Price UGX
          .row.form-row
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='text' placeholder='Quantity' name='qty')
              label#float-lables Quantity
            .form-floating.col-lg-6
              input#floatingInput.form-control(type='text' placeholder='Directions' name='directions')
              label#float-lables Directions
          .row.form-row
            .form-floating.col-lg-6.form-sel-act
              select.form-select(aria-label='Default select example' name='produce_type')
                option#selected(selected='') Produce Type
                option(value='Organic') Organic
                option(value='None Organic') None Organic
            .form-floating.col-lg-6.form-sel-act.mod-of-pay
              select.form-select(aria-label='Default select example' name='mode_payment')
                option#selected(selected='') Mode of payment
                option(value='Cash') Cash
                option(value='Mobile Money') Mobile Money
          .row.form-row(style='padding-top: 20px;')
            .form-floating.col-lg-6.form-sel-act
              select.form-select(aria-label='Default select example' name='mode_of_delivery')
                option#selected(selected='') Mode of delivery
                option(value='Pick Up') Pick Up
                option(value='Home delivery') Home delivery
            .col-lg-6
              div
                input#formFile.form-control.upload-image(type='file' name='prod_image')
          button(type='submit' name='submit' class='submit-btn' href) Add item

.container.info-table
  .row
      .table-responsive
         table.table.table-bordered.border-dark.table-hover
           thead(style='background-color: #3D8361; color: white;')
                tr#align-middle                
                    th Date
                    th(scope='col') Produce Name
                    th(scope='col') Ward Name
                    th(scope='col') Unit Price (UGX)
                    th(scope='col') Quantity
                    th(scope='col') Directions
                    th(scope='col') Produce Type
                    th(scope='col') Mode of Payment
                    th(scope='col') Mode of Delivery    
                    th(scope='col') Product Img
                    th(scope='col') Action
                      tbody
                          each user_prod in user_produce
                            tr.align-middle                                                        
                                  td #{user_prod.date}
                                  td #{user_prod.prod_name}
                                  td #{user_prod.ward_name}
                                  td #{user_prod.unit_price}
                                  td #{user_prod.qty}
                                  td #{user_prod.directions}
                                  td #{user_prod.produce_type}
                                  td #{user_prod.mode_payment}
                                  td #{user_prod.mode_of_delivery}
                                  td 
                                    img(src="/"+user_prod.prod_image, width="90" class="img-thumbnail")                                  
                                  .d-inline
                                    td
                                      a.text-success(href='#')
                                        i.fas.fa-edit.fa-lg.mx-1
                                      a.text-danger(href='#')
                                        i.fas.fa-trash.fa-lg.mx-1


