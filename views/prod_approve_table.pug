nav.navbar.navbar-expand-lg.navbar-light.bg-light
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item.active
          a.nav-link(href='/fo')
            | Home 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='/fo_approve') Approve Products
        li.nav-item
          a.nav-link(href='/view_order') See orders

        li.nav-item 
          form(action="/logout", method="post")
            button(type="submit" style='margin-top:10px; margin-left:800px; border:none; background-color:red; color:white;') Logout 
 

form(action=`/fo_approve/id${prod_display._id}` method='post')
  .container-fluid.info-table
    .row
      .table-responsive.text-center
        table.table.table-bordered.border-success.table-hover
          thead(style='background-color: #3D8361; color: white;')
            tr
              th(scope='col') Date
              th(scope='col') Produce Name
              th(scope='col') Ward Name
              th(scope='col') Unit Price (UGX)
              th(scope='col') Quantity
              th(scope='col') Directions
              th(scope='col') Produce Type
              th(scope='col') Mode of Payment
              th(scope='col') Mode of Delivery
              th(scope='col') Product Img
              th Status
              th Category
              th Approve/Reject Product
                tbody
                  each prod_dis in prod_display
                      tr
                      td #{prod_dis.date}
                      td #{prod_dis.prod_name}
                      td #{prod_dis.ward_name}
                      td #{prod_dis.unit_price}
                      td #{prod_dis.qty}
                      td #{prod_dis.directions}
                      td #{prod_dis.produce_type}
                      td #{prod_dis.mode_payment}
                      td #{prod_dis.mode_of_delivery}
                      td         
                       img(src="/"+prod_dis.prod_image, width="90" class="img-thumbnail")  
                      td #{prod_dis.prod_status}    
                      td #{prod_dis.category}                            
                      td.align-center
                        a.text-success(href=`/prod_approve/app/${prod_dis._id}`)
                         i.fas.fa-edit.fa-lg.mx-1

